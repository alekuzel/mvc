@{
 ViewData["title"] = "Om oss";
 Layout = "_Layout";
}

<h2>Om sidan</h2>

<button id="guessButton">Guess the total number of cats</button>
<div id="message"></div>

@section Scripts {
    <script>
        var totalCats = @ViewBag.TotalCats; // get the total number of cats from ViewBag

        document.getElementById('guessButton').addEventListener('click', function() {
            var guess = prompt('Försåk att gissa hur många katter är registrade hos oss nu:');
            if (guess == totalCats) {
                document.getElementById('message').textContent = 'Grattis! Ditt svar ät helt rätt!';
            } else {
                if (confirm('Fel svar! Vill du försöka igen? Annars tryck Avbryt of se rätt svar')) {
                    // if the user clicks "OK", trigger the button click event again
                    document.getElementById('guessButton').click();
                } else {
                    // if the user clicks "Cancel", show the correct answer
                    document.getElementById('message').textContent = 'Nu  ä det ' + totalCats + ' registrerade hos oss.';
                }
            }
        });
    </script>
}