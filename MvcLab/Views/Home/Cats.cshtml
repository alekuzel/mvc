@model MvcLab.Models.CatsModel

@{
    ViewData["title"] = "Katter"; // Sets the title of the view to "Katter"
    Layout = "_Layout"; // Specifies the layout page for this view, which is "_Layout"
}

<!-- CSS styles for the form and its elements -->
<!-- CSS styles for the form and its elements -->
<style>
     form {
        width: 100%;
        max-width: 400px; 
        margin: 0 auto;
        padding: 35px;
        background-color: #ecf6dd;
        border-radius: 5px;
    }
   
    h2, p {
        text-align: center;
    }
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    .btn {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    .btn:hover {
        background-color: #45a049;
    }
</style>

<h2>Katter</h2> <!-- Heading of the page -->

<p>Lägga till nya katter här:</p> <!-- Instruction for the user -->

<!-- Validation summary for displaying errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- form for adding a new cat -->
<form asp-controller="Home" asp-action="AddCat" method="post">
    <!--  the cat's name -->
    <label asp-for="Name"></label><br>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" style="color:red;"></span><br>

    <!-- the cat's breed -->
    <label asp-for="Breed"></label><br>
    <input asp-for="Breed" class="form-control" />
    <span asp-validation-for="Breed" style="color:red;"></span><br>

    <!-- Field for the cat's color -->
    <label asp-for="Color"></label><br>
    <input asp-for="Color" class="form-control" />
    <span asp-validation-for="Color" style="color:red;"></span><br>

    <!-- cat's age -->
    <label asp-for="Age"></label><br>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" style="color:red;"></span><br>

    <input type="submit" value="Lägg till" class="btn" />
</form>
