@model List<MvcLab.Models.CatsModel>
@{
  ViewData["title"] = "Startsidan";
  Layout = "_Layout";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 100px;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #4CAF50;
        color: white;
    }
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    .edit-button, .delete-button {
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        color: white;
    }
    .edit-button {
        background-color: #4CAF50;
    }
    .delete-button {
        background-color: #f44336;
    }
</style>
<h2>Startsidan</h2>
<h3>Nu finns det följande katter här:</h3>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Color</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.Breed</td>
            <td>@cat.Color</td>
            <td>@cat.Age</td>
            <td>
                <a asp-controller="Home" class="edit-button" asp-action="EditCat" asp-route-id="@cat.Id">Edit</a> |
                <form asp-controller="Home" asp-action="DeleteCat" asp-route-id="@cat.Id" method="post" style="display:inline;">
                    <input class="delete-button" type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this cat?');" />
                </form>
            </td>
        </tr>
    }
  </tbody>
</table>
